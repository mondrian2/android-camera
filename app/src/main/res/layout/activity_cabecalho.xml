<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo" />

        <EditText
            android:id="@+id/week"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/lightGray"
            android:hint="Semana epidemiológica*"
            android:padding="20dp"
            android:textColor="@color/darkGray" />

        <EditText
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/lightGray"
            android:hint="Cidade*"
            android:padding="20dp"
            android:textColor="@color/darkGray" />

        <EditText
            android:id="@+id/state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/lightGray"
            android:hint="Estado*"
            android:padding="20dp"
            android:textColor="@color/darkGray" />

        <EditText
            android:id="@+id/locality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/lightGray"
            android:hint="Localidade*"
            android:padding="20dp"
            android:textColor="@color/darkGray" />

        <EditText
            android:id="@+id/sublocality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/lightGray"
            android:hint="Sub Localidade*"
            android:padding="20dp"
            android:textColor="@color/darkGray" />

        <EditText
            android:id="@+id/zone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/lightGray"
            android:hint="Bairro/Zona*"
            android:padding="20dp"
            android:textColor="@color/darkGray" />

        <EditText
            android:id="@+id/products"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/lightGray"
            android:hint="Produtos Utilizados*"
            android:padding="20dp"
            android:textColor="@color/darkGray" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonSend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/defaultbutton"
            android:text="Iniciar inspeção"
            android:textAllCaps="false"
            android:textColor="@color/darkGray"
            android:textSize="18sp" />
    </LinearLayout>
</ScrollView>
